{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "typeRoots": ["../types"]
  },
  "include": [
    "../**/*.ts",
    "../**/*.d.ts",
    "../**/*.tsx",
    "../**/*.vue"
  ]
}